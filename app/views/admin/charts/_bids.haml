- [:day, :week, :month].each do |range|
  :javascript
    $(document).ready(function(){
      $.ajax({
        url: '/en/api/v1/charts/bids?range=' + '#{range}',
        crossDomain: true,
        success: function(data){
          drawLineChart(
            "#{range}_bids_chart",
            data,
            {
              chartArea: { width: '65%' },
              title: 'Bids per #{range}',
              width: window.innerWidth * 0.4
            }
          )
        }
      });
    });
