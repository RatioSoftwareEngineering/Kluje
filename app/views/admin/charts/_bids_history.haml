:javascript
  $(document).ready(function(){
    $.ajax({
      url: '/en/api/v1/charts/bids_history?country_id=' + '#{country.id}',
      crossDomain: true,
      success: function(data){
        drawLineChart(
          "#{country.currency_code.upcase}_bids_history",
          data,
          {
            chartArea: { width: '65%' },
            title: 'Bids',
            width: window.innerWidth * 0.4
          }
        )
      }
    });
  });
